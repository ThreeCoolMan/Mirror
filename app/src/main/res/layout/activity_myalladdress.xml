<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_linearLayout_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_allItem_horizontal_marginLeft"
        android:layout_marginTop="@dimen/login_allItem_horizontal_create_marginTop"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_buyDetails_writeAddressTV_text_changeAddresl"
            android:textColor="@color/login_allTextView_colour"
            android:textSize="@dimen/login_title_textView_size" />

        <View
            android:layout_width="@dimen/activity_myaddress_layout_heightaam"
            android:layout_height="@dimen/activity_myaddress_layout_heightaan"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/activity_myAllAddress_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/login_allItem_close_btn_marginRight"
            android:src="@mipmap/btn_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_allItem_horizontal_marginLeft"
        android:layout_marginRight="@dimen/login_allItem_horizontal_marginRight"
        android:layout_marginTop="@dimen/login_allItem_horizontal_marginTop"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/iv_line_below_create" />

        <TextView
            android:id="@+id/activity_myAddress_tv_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_myaddress_layout_height"
            android:layout_marginTop="@dimen/activity_myaddress_listview_marginTop"
            android:background="@mipmap/iv_fill_in_address_input"
            android:gravity="center"
            android:text="@string/activity_buyDetails_writeAddressTV_text_changeAddressm"
            android:textColor="#333"
            android:textSize="@dimen/item_fragmentallbrowsing_des_size"
            android:textStyle="bold" />


        <com.lanou.mirror.tools.SwipeListView
            android:id="@+id/activity_myaddress_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_myaddress_listview_marginTop"></com.lanou.mirror.tools.SwipeListView>

    </LinearLayout>


</LinearLayout>