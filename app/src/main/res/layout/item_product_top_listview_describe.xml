<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_product_top_listview_describe_ll_father_height"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout


        android:layout_width="@dimen/item_product_top_listview_describe_ll_son_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/black"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_product_top_listview_describe_ll_littleson_margin"
            android:layout_marginRight="@dimen/item_product_top_listview_describe_ll_littleson_margin"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/item_product_top_listview_describe_iv_line_top_marginTop"
                android:background="@mipmap/iv_line_below_title" />

            <TextView

                android:id="@+id/item_product_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/item_product_top_listview_describe_tv_brand_marginTop"
                android:textColor="@android:color/white"
                android:textSize="@dimen/item_product_top_listview_describe_tv_brand_textsize" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_product_top_listview_describe_iv_line_bottom_marginTop"
                android:background="@mipmap/iv_line_below_title" />

            <TextView
                android:id="@+id/item_product_tv_introcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_product_top_listview_describe_tv_content_marginBottom"
                android:layout_marginTop="@dimen/item_product_top_listview_describe_tv_content_marginTop"
                android:textColor="@android:color/white"
                android:textSize="@dimen/item_product_top_listview_describe_tv_content_textsize" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
