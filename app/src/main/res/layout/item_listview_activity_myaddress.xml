<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        
        android:background="@mipmap/iv_fill_in_address_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/item_listview_activity_myaddress_receiveman"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:textColor="#333"
            android:textSize="13sp"
            android:text="1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#333"
            android:id="@+id/item_listview_activity_myaddress_address"
            android:layout_below="@+id/item_listview_activity_myaddress_receiveman"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:text="2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#333"
            android:text="3"
            android:id="@+id/item_listview_activity_myaddress_number"
            android:layout_below="@+id/item_listview_activity_myaddress_address"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_listview_activity_myaddress_edit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>






</LinearLayout>