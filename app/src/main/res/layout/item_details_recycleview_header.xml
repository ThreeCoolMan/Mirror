<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_details_recycleview_header_vv_width"
    android:layout_height="wrap_content"
  >
    <FrameLayout
        android:id="@+id/item_details_fl_details"
        android:background="@android:color/black"
        android:layout_width="@dimen/item_details_recycleview_header_vv_width"
        android:layout_height="wrap_content">

    <com.universalvideoview.UniversalVideoView

        android:id="@+id/item_details_uv_details"
        android:layout_width="@dimen/item_details_recycleview_header_vv_width"
        android:layout_height="@dimen/item_details_recycleview_header_vv_height"
        app:uvv_autoRotation="true"
        app:uvv_fitXY="false" />

    <com.universalvideoview.UniversalMediaController
        android:id="@+id/item_details_umc_details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:uvv_scalable="true" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/item_details_ib_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/video" />

</FrameLayout>
</FrameLayout>